<?xml version="1.0"?>
<launch>
	<arg name="node_name"    value="aruco_single"/> 
	<arg name="markerId"     value="1"/> 
	<arg name="markerSize"   value="0.05"/>  
	<arg name="do_pose_estimation" default="true"/>
	<arg name="marker_frame" value="marker_frame"/>
	<arg name="ref_frame"    value=""/>  
	<arg name="corner_refinement" value="LINES"/> <!-- NONE, HARRIS, LINES, SUBPIX -->

	<node pkg="aruco_ros" type="single" name="$(arg node_name)">
		<remap from="/camera_info" to="/camera_image/color/camera_info"/>
		<remap from="/image" to="/camera_image/color/image_raw"/>
		<param name="image_is_rectified" value="True"/>
		<param name="marker_size"        value="$(arg markerSize)"/>
		<param name="marker_id"          value="$(arg markerId)"/>
		<param name="reference_frame"    value="$(arg ref_frame)"/> <!-- frame in which the marker pose will be refered -->
		<param name="camera_frame"       value="base_link"/>
		<param name="marker_frame"       value="$(arg marker_frame)" />
		<param name="corner_refinement"  value="$(arg corner_refinement)" />
		<param name="do_pose_estimation" value="$(arg do_pose_estimation)"/>
	</node>
</launch>
